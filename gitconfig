[user]
  name = Michael Campagnaro
  email = mikecampo@gmail.com
[merge]
  summary = true
  tool = vimdiff
[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore
[push]
  default = upstream
[diff]
  algorithm = patience
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an [%cn]%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
[rerere]
  enabled = true
