# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias l='ls -l --color'
  alias ll='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias l='ls -laG'
  alias ll='ls -lG'
fi

alias c='cd'
alias cd-='cd -'
alias ..='cd ../'
alias ...='cd ../..'
alias cd..='cd ..'
alias cd...='cd ../..'
alias cd....='cd ../../..'
alias cd.....='cd ../../../..'
alias cd/='cd /'
alias ls='ls -G'

alias aliases='vim ~/.dotfiles/zsh/aliases'
